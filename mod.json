{
    "geode": "4.1.0",
    "version": "v1.4.2",
    "gd": {
        "win": "2.2074",
        "mac": "2.2074",
        "android": "2.2074"
    },
    "id": "cgytrus.menu-shaders",
    "name": "Menu Shaders",
    "developers": [ "mat", "ConfiG", "rooot" ],
    "description": "Replaces the background of the main menu with a customizable shader.",
    "repository": "https://github.com/cgytrus/MenuShaders",
    "issues": {
        "info": "Report any issues you have on GitHub issues.",
        "url": "https://github.com/cgytrus/MenuShaders/issues"
    },
    "tags": [ "offline", "interface", "customization" ],
    "resources": {
        "files": [
            "resources/shaders/*.glsl"
        ]
    },
    "dependencies": [
        {
            "id": "geode.node-ids",
            "version": ">=v1.18.0",
            "importance": "required"
        },
        {
            "id": "geode.texture-loader",
            "version": "*",
            "importance": "recommended"
        }
    ],
    "settings": {
        "show-main": {
            "name": "Show in main menu",
            "description": "MenuLayer",
            "type": "bool",
            "default": true
        },
        "show-level-select": {
            "name": "Show in level select menu",
            "description": "LevelSelectLayer",
            "type": "bool",
            "default": false
        },
        "level-select-hide-corners": {
            "name": "Hide corners in level select menu",
            "description": "Also hides the bar at the top",
            "type": "bool",
            "default": true,
            "enable-if": "show-level-select"
        },
        "level-select-hide-ground": {
            "name": "Hide ground in level select menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-level-select"
        },
        "show-creator": {
            "name": "Show in creator menu",
            "description": "CreatorLayer",
            "type": "bool",
            "default": false
        },
        "creator-hide-corners": {
            "name": "Hide corners in creator menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-creator"
        },
        "show-level-browser": {
            "name": "Show in level lists",
            "description": "Hall of Fame, Featured, Saved, etc. (LevelBrowserLayer)",
            "type": "bool",
            "default": false
        },
        "level-browser-hide-corners": {
            "name": "Hide corners in level lists",
            "type": "bool",
            "default": true,
            "enable-if": "show-level-browser"
        },
        "show-edit-level": {
            "name": "Show in edit level menu",
            "description": "EditLevelLayer",
            "type": "bool",
            "default": false
        },
        "edit-level-hide-corners": {
            "name": "Hide corners in edit level menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-edit-level"
        },
        "edit-level-hide-backgrounds": {
            "name": "Hide backgrounds in edit level menu",
            "description": "Hides the backgrounds under level name and description inputs",
            "type": "bool",
            "default": true,
            "enable-if": "show-edit-level"
        },
        "show-play-level": {
            "name": "Show in play level menu",
            "description": "LevelInfoLayer",
            "type": "bool",
            "default": false
        },
        "play-level-hide-corners": {
            "name": "Hide corners in play level menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-play-level"
        },
        "show-search": {
            "name": "Show in search menu",
            "description": "LevelSearchLayer",
            "type": "bool",
            "default": false
        },
        "search-hide-corners": {
            "name": "Hide corners in search menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-search"
        },
        "search-hide-backgrounds": {
            "name": "Hide backgrounds in search menu",
            "description": "Hides the backgrounds under query input, difficulty selector, etc.",
            "type": "bool",
            "default": true,
            "enable-if": "show-search"
        },
        "show-garage": {
            "name": "Show in garage (icon select) menu",
            "description": "GJGarageLayer",
            "type": "bool",
            "default": false
        },
        "garage-hide-corners": {
            "name": "Hide corners in garage menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-garage"
        },
        "garage-hide-backgrounds": {
            "name": "Hide backgrounds in garage menu",
            "description": "Hides the black background under the icon selector",
            "type": "bool",
            "default": false,
            "enable-if": "show-garage"
        },
        "show-leaderboards": {
            "name": "Show in leaderboards menu",
            "description": "LeaderboardsLayer",
            "type": "bool",
            "default": false
        },
        "leaderboards-hide-corners": {
            "name": "Hide corners in leaderboards menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-leaderboards"
        },
        "show-gauntlets": {
            "name": "Show in gauntlet selection menu",
            "description": "GauntletSelectLayer",
            "type": "bool",
            "default": false
        },
        "gauntlets-hide-corners": {
            "name": "Hide corners in gauntlet selection menu",
            "type": "bool",
            "default": true,
            "enable-if": "show-gauntlets"
        },
        "show-gauntlet": {
            "name": "Show in gauntlet menus",
            "description": "GauntletLayer",
            "type": "bool",
            "default": false
        },
        "show-treasure-room": {
            "name": "Show in The Treasure Room",
            "description": "SecretRewardsLayer",
            "type": "bool",
            "default": false
        },
        "treasure-room-hide-corners": {
            "name": "Hide corners in The Treasure Room",
            "type": "bool",
            "default": true,
            "enable-if": "show-treasure-room"
        },
        "treasure-room-hide-floor": {
            "name": "Hide floor in The Treasure Room",
            "type": "bool",
            "default": true,
            "enable-if": "show-treasure-room"
        }
    }
}
